# .circleci/config.yml
version: 2.1
jobs:
  build-and-test:
    macos:
      xcode: 15.0.1
    steps:
      - checkout
      - run:
          name: Build
          command: cd Packages/SwiftLeedsKit & swift build -Xswiftc -warnings-as-errors --build-tests
      - run:
          name: Test
          command: cd Packages/SwiftLeedsKit & swift build -c release -Xswiftc -warnings-as-errors

workflows:
  build-test-adhoc:
    jobs:
      - build-and-test
